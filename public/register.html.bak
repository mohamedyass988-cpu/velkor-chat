<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>إنشاء حساب</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(180deg, #eef3fb, #f7f9fd);
      font-family: system-ui;
    }

    .card {
      background: #fff;
      width: 100%;
      max-width: 360px;
      padding: 32px;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.08);
      text-align: center;
    }

    .card h1 {
      margin-bottom: 20px;
      font-size: 24px;
    }

    input, select {
      width: 100%;
      padding: 12px;
      margin-bottom: 12px;
      border-radius: 8px;
      border: 1px solid #ddd;
      font-size: 15px;
    }

    button {
      width: 100%;
      padding: 14px;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      background: #34a853;
      color: #fff;
      cursor: pointer;
    }
  </style>
</head>
<body>

<div class="card">
  <h1>إنشاء حساب</h1>

  <input id="username" placeholder="اسم المستخدم">
  <input id="nickname" placeholder="اللقب">

  <select id="age">
    <option value="">العمر</option>
    <option>18</option><option>19</option><option>20</option>
    <option>21</option><option>22</option><option>23</option>
    <option>24</option><option>25</option><option>26</option>
    <option>27</option><option>28</option><option>29</option>
    <option>30</option>
  </select>

  <select id="gender">
    <option value="">الجنس</option>
    <option>ذكر</option>
    <option>أنثى</option>
  </select>

  <input id="password" type="password" placeholder="كلمة المرور">

  <button onclick="save()">حفظ</button>
</div>

<script>
function save() {
  fetch("/register", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      username: username.value,
      lastname: nickname.value,
      age: age.value,
      gender: gender.value,
      password: password.value
    })
  })
  .then(r => r.json())
  .then(d => {
    if (d.ok) {
      alert("✅ تم حفظ المعلومات");
      window.location.href = "/";
    } else {
      alert(d.error);
    }
  });
}
</script>

</body>
</html>